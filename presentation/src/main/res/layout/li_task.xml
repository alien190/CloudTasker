<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin"
    android:elevation="@dimen/elevation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title Title Title Title Title Title Title Title Title Title Title Title Title"
            android:layout_marginBottom="@dimen/margin"
            style="@style/TaskCaption" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="text text text text tex text text text text text tex text text text text text tex text text text text text tex text text text text text tex text "
            style="@style/TaskText" />
    </LinearLayout>
</androidx.cardview.widget.CardView>